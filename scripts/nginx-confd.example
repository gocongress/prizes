server {
    server_name <DOMAIN_NAME>;

    # Route /api to the api
    location /api/ {
        proxy_pass http://localhost:<API_PORT>/;
        proxy_http_version 1.1;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_set_header Connection "";
        proxy_connect_timeout       60;
        proxy_send_timeout          3600;
        proxy_read_timeout          3600;
        send_timeout                3600;
    }

    # Route /admin to the admin app
    location /admin/ {
        proxy_pass http://localhost:<ADMIN_PORT>/;
        proxy_http_version 1.1;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_set_header Connection "";
        proxy_connect_timeout       60;
        proxy_send_timeout          3600;
        proxy_read_timeout          3600;
        send_timeout                3600;
    }

    # Route everything else (/) to the players app
    location / {
        proxy_pass http://localhost:<PLAYER_PORT>;
        proxy_http_version 1.1;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_set_header Connection "";
        proxy_connect_timeout       60;
        proxy_send_timeout          3600;
        proxy_read_timeout          3600;
        send_timeout                3600;
        add_header Cache-Control $cache_control_header;
    }
}
server {
    if ($host = <DOMAIN_NAME>) {
        return 301 https://$host$request_uri;
    }

    listen 80;
    server_name <DOMAIN_NAME>;
}
