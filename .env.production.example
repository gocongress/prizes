# Usage Instructions for  .env.prod
# podman compose --env-file .env.prod up -d
#
# Production Environment Variables
# Copy this file to .env.prod and fill in the values
# NEVER commit .env.prod to version control

# Database Configuration
DB_USER=postgres
DB_PASSWORD=your-secure-password-here
DB_NAME=postgres
DB_SSL=0
POSTGRES_PORT=5432

# Volume Paths (optional - defaults to ./volumes/prod/)
# Use absolute paths for production deployments
# DB_VOLUME_PATH=/var/lib/api/db-data
# DB_BUILD_VOLUME_PATH=/var/lib/api/build-db-data

# JWT Configuration
JWT_SECRET_KEY=your-secure-secret-key-here-min-32-chars
JWT_EXPIRES_IN=7d

# Server Configuration
LOG_LEVEL=info
CORS_ALLOWED_ORIGINS=https://prizes.gocongress.org

# Admin Configuration
ADMIN_EMAILS=admin@yourdomain.com

# Database Seeding (should be false in production)
SEED_DATA=false

# Docker host port mappings
API_HOST_PORT=3001
ADMIN_APP_HOST_PORT=3000
PLAYER_APP_HOST_PORT=3002
