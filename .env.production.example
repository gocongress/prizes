# Usage Instructions for  .env.prod
# podman compose --env-file .env.prod up -d
#
# Production Environment Variables
# Copy this file to .env.prod and fill in the values
# NEVER commit .env.prod to version control

# Database Configuration
DB_USER=postgres
DB_PASSWORD=your-secure-password-here
DB_NAME=postgres
DB_SSL=0
POSTGRES_PORT=5432

# Volume Paths (optional - defaults to ./volumes/prod/)
# Use absolute paths for production deployments
# DB_VOLUME_PATH=/var/lib/api/db-data
# DB_BUILD_VOLUME_PATH=/var/lib/api/build-db-data

# JWT Configuration
JWT_SECRET_KEY=your-secure-secret-key-here-min-32-chars
JWT_EXPIRES_IN=7d

# Server Configuration
LOG_LEVEL=info
CORS_ALLOWED_ORIGINS=https://prizes.gocongress.org

# Admin Configuration
ADMIN_EMAILS=admin@yourdomain.com

# Cloudflare Turnstile Configuration
# Set TURNSTILE_ENABLED=true to enable Cloudflare Turnstile verification
# Get your secret key from the Cloudflare dashboard
TURNSTILE_ENABLED=true
TURNSTILE_SECRET_KEY=your-turnstile-secret-key-here
TURNSTILE_TIMEOUT=3000

# SMTP2GO Configuration
SMTP2GO_ENABLED=true
SMTP2GO_API_KEY=your-smtp2go-api-key-here
SMTP2GO_FROM_EMAIL=noreply@gocongress.org
SMTP2GO_FROM_NAME=AGA Prizes

# Database Seeding (should be false in production)
SEED_DATA=false

# Docker host port mappings
API_HOST_PORT=3001
ADMIN_APP_HOST_PORT=3000
PLAYER_APP_HOST_PORT=3002
